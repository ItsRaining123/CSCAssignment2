<body>
    <h1></h1>
    <h2>Add User Recommendation</h2>
    <form id="dataForm">
        <div class="form-group form-group-lg col-md-12">
            <label for="idInput">Id *</label>
            <br />
            <input type="text" class="form-control" id="idInput" name="idInput" />
        </div>
        <div class="form-group form-group-lg col-md-12">
            <label for="nameInput">Name *</label>
            <br />
            <input type="text" class="form-control" id="nameInput" name="nameInput" />
        </div>
        <div class="form-group form-group-lg col-md-12">
            <label for="ageInput">
                Age *
            </label>
            <br />
            <input type="number" class="form-control" id="ageInput" name="ageInput" />
        </div>
        <div class="form-group form-group-lg col-md-12">
            <label for="languageInput">
                Language *
            </label>
            <br />
            <input type="text" class="form-control" id="languageInput" name="languageInput" />
        </div>
        <div class="form-group form-group-lg col-md-12">
            <label for="countryInput">
                Country *
            </label>
            <br />
            <select class="form-control" id="countryInput">
            </select>
        </div>
        <div class="form-group form-group-lg col-md-12">
            <label for="languageInput">
                Sex *
            </label>
            <br />
            <select class="form-control" id="sexInput">
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
        </div>
        <div class="form-group form-group-lg col-md-12">
            <label for="reknownInput">
                Reknown *
            </label>
            <input type="text" class="form-control" id="reknownInput" name="reknownInput" />
        </div>

        <div class="form-group form-group-lg col-md-12">
            <label for="bioInput">
                Bio*
            </label>
            <input type="text" class="form-control" id="bioInput" name="bioInput" />
        </div>

        <div class="form-group col-md-12">
            <div>
                <button type="button" class="btn btn-light"
                        onclick="location.href='/Recommendations/Index'">
                    Cancel
                </button>
                <button type="reset" id="resetButton" class="btn btn-secondary">
                    Reset
                </button>
                <input type="button" name="btn" value="Create" id="createButton" class="btn btn-primary" />
            </div>
        </div>
    </form>
</body>

