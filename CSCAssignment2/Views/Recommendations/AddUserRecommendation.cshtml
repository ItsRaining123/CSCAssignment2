            $.ajax({
                type: 'POST',
                url: '/API/Recommendations/AddUserRecommendation',
                data: webFormData,
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8'
            }).done(function (data) {
                console.dir(data);
                Swal.fire({
                    title: 'Success',
                    text: data.message,
                    icon: 'success'
                });
            }).fail(function (data) {
                if (data.responseJSON) {
                    Swal.fire({
                        title: 'Error',
                        text: data.responseJSON.message,
                        icon: 'error'
                    });
